<%- include("partials/header") %>


<div class="container" style="padding-top: 40px;">
   <div class="row">
      <div class="col-md-3">
         <p class="lead">yelpCamp</p>
         <div class="list-group">
            <li class="list-group-item active">Info 1</li>
            <li class="list-group-item">Info 2</li>

            <li class="list-group-item">Info 3 </li>

         </div>
      </div>
      <div class="col-md-9">
        
         <div class="img-thumbnail" style="border-color:red;">

            <img  class="card-img-top" src="<%= campground.image %>" alt="">

            <div class="caption-full" style="padding-top: 20px;">
               <h4 class="float-right">$9.00/night</h4>
               <h4><a href="#"><%= campground.name %></a></h4>
               <p> <%=campground.description %></p>
               <p>
                   Submitted by <%= campground.user.username %>
               </p>
               <% if(userdetails && campground.user.userid == userdetails._id){ %>
                  <a class="btn btn-success  " href="/campgrounds/<%=campground._id %>/edit">   edit   </a>
                  <form  style="display: inline;" action="/campgrounds/<%=campground._id %>?_method=DELETE" method="POST">
                     <button  class="btn btn-xl btn-danger">Delete</button>
                  </form>
              <% } %> 
              
            </div>
         </div>

         <div class="card card-body bg-dark" style="margin-top: 30px; margin-bottom: 40px;">
            <div class="text-right">
               <a class="btn btn-xl btn-success" href="/campgrounds/<%=campground._id %>/comments">Add a new comment</a>
              

            </div>
            

            <% campground.comments.forEach(function(comment) {%>
         
      
               <p style="color: white;"><strong><%= comment.author %></strong>  -- <%= comment.text %>
                  <% if(userdetails && comment.userid == userdetails._id){ %>

                  <form action="/campgrounds/<%=campground._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                     <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                  </form>
                  <% } %> 

               </p>
         
             <% }) %> 
           

         </div>
         
            
         
      
         
   
       


      </div>
   </div>
  

</div>


<%- include("partials/footer") %>