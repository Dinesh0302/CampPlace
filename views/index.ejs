<%- include("partials/header") %>



<div class="container" style="margin-top: 30px;">

   <header class = "jumbotron">
      <div  class= "container">
         <h1>welcome to our campground</h1>
         <p>View our hand picked campgrounds from all over the world</p>
         <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a new Campground</a>
   
         </p>
      </div>
      
   </header> 
   
   
   
   <div class="row text-center" >
      <% campgrounds.forEach(function(camp) {  %>

         <div class="col-lg-4 col-md-4 col-sm-6"  style="padding-bottom: 30px;" >
            <div class="img-thumbnail">
         
               <img class="card-img-top" src=" <%= camp.image %>" alt="" style="padding-bottom: 20px;">
           
            <div class="caption" >
               <h4><%= camp.name %></h4>
               <p>
               <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">more info</a>
            </p>
           
         </div>
      </div>
      
           
      
         </div>
      
      <%} )%> 
   


   </div>
   
  
</div>


<%- include("partials/footer") %>