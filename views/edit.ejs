<%- include("partials/header") %>

<div class="container" style="margin-top: 30px;">
   <div class="row">
      <h1 style="text-align: center;">Update your Campgrounds <%= campground.name %></h1>
      <div style="width: 30%; margin: 25px auto;">
         <form action = "/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
               <input type="text" name ="campground[name]"  value="<%= campground.name %>">

            </div>
            <div class="form-group">
               <input type="text" name ="campground[image]" value="<%= campground.image %>">

            </div>
            <div class="form-group">
               <input type="text" name ="campground[description]" value="<%= campground.description %>">

            </div>
            <div class="form-group">
               <button class="btn btn-xl">submit</button>

            </div>
         </form>
      
      </div>

     


   </div>
 
</div>




<%- include("partials/footer") %>